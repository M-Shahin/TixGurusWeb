@model TixGurusWeb.Models.Event

@{
    string userName = Convert.ToString(Session["userName"]);
    int userID = Convert.ToInt16(Session["userID"]);
    bool isAdmin = Convert.ToBoolean(Session["isAdmin"]);
}

@{
    ViewBag.Title = "Details";
}
@{
    string ImageUrl = "";
    if (Model.EventLocation.ToUpper().Contains("MUSEUM"))
    {
        if (Model.EventLocation.ToUpper().Contains("ART"))
        {
            ImageUrl = "~/Image/ArtMuseum.jpg";
        }
        else if (Model.EventLocation.ToUpper().Contains("SCIENCE"))
        {
            ImageUrl = "~/Image/ScienceMuseum.jpg";
        }
    }
    else if (Model.EventLocation.ToUpper().Contains("STADIUM"))
    {
        ImageUrl = "~/Image/Stadium.jpg";
    }
    else if (Model.EventLocation.ToUpper().Contains("THEATRE") || Model.EventLocation.ToUpper().Contains("THEATER"))
    {
        ImageUrl = "~/Image/Theatre.jpg";
    }
    else if (Model.EventLocation.ToUpper().Contains("EXHIBITION"))
    {
        ImageUrl = "~/Image/Exhibition.jpg";
    }
    else if (Model.EventLocation.ToUpper().Contains("ENTERTAINMENT"))
    {
        ImageUrl = "~/Image/Entertainment.jpg";
    }
    this.ViewBag.ImageUrl = ImageUrl;
}
