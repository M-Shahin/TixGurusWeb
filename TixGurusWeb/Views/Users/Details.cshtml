@model TixGurusWeb.Models.User

@{
    ViewBag.Title = "Details";
}

@if (Model.Role == "Admin")
{
    <h2>Admin</h2>
}
else
{
    <h2>Member</h2>
    <h4>Dashboard</h4>
}

<div>
    @*<h4>Dashboard</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

    </dl>
</div>

@if (!Convert.ToBoolean(Session["isAdmin"]))
{
    <p>
        @Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserID })
        @*@Html.ActionLink("Back to List", "Index")*@
    </p>
    <hr />
    <div>
        <h4>Previously Attended Events</h4>
        <table class="table table-striped table-bordered" id="Events">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Event Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Description</th>
                </tr>
            </thead>
            @foreach (var item in ViewBag.Booking)
            {
                <tr>
                    <td>
                        @item.Event.EventTitle
                    </td>
                    <td>
                        @item.Event.EventLocation
                    </td>
                    <td>
                        @item.Event.EventDate
                    </td>
                    <td>
                        @item.Event.EventDescription
                    </td>
                </tr>
            }

        </table>
    </div>
}
